<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uiapp.magadistudio.com.studypro.CourseDetailActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please fill the following information"
        android:id="@+id/textView"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/editCourseNameId"
        android:hint="Course Name"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorHint="#615d5d" />
    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/editCourseAbbreviationId"
        android:hint="Course abbreviation"
        android:layout_below="@+id/editCourseNameId"
        android:paddingTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textColorHint="#615d5d" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:id="@+id/editLocationId"
        android:paddingTop="20dp"
        android:hint="Location"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorHighlight="#615d5d"
        android:textColor="#000000"
        android:textColorHint="#615d5d"
        android:layout_below="@+id/editCourseAbbreviationId" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="Optional"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView3"
        android:layout_toRightOf="@+id/editLocationId"
        android:layout_toEndOf="@+id/editLocationId"
        android:layout_below="@+id/editCourseAbbreviationId" />

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add course"
        android:id="@+id/editButtonId"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
